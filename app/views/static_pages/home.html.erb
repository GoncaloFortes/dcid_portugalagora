<% provide(:title, '') %>

<% if user_signed_in? %>


<div class="row">
  <div class="col-md-12 text-center">
    <%= image_tag("logo-portugal-agora.png", alt: "Portugal Agora logo", class: "logo") %>
    <%= image_tag("logo-dcid.png", alt: "DCID logo", class: "logo") %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-4 col-md-offset-2 text-center">
    <i class="fa fa-bullhorn fa-4x"></i>
    <br><br>
    <%= link_to 'Propor', new_proposal_path, class: "btn btn-default btn-success btn-lg" %>
  </div>
  <br class="visible-xs"><!-- separates divs -->
  <div class="col-md-4 text-center">
    <i class="fa fa-thumbs-o-up fa-4x"></i>
    <br><br>
    <%= link_to 'Decidir', proposals_path, class: "btn btn-default btn-success btn-lg" %>
  </div>
</div>


<% else %>


<div class="row">
  <div class="col-md-12 text-center">
      <%= image_tag("logo-portugal-agora.png", alt: "Portugal Agora logo", class: "logo") %>
      <%= link_to image_tag("logo-dcid.png", alt: "DCID logo", class: "logo"), new_user_session_path %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-4 text-center">
    <i class="fa fa-bullhorn fa-4x"></i>
    <h2><strong>Propor</strong></h2>
    <p class="">Faça a sua voz ser ouvida</p>
  </div>
  <div class="col-md-4 text-center">
    <i class="fa fa-comments fa-4x"></i>
    <h2><strong>Debater</strong></h2>
    <p class="">Melhore a sua proposta</p>
  </div>
  <div class="col-md-4 text-center">
    <i class="fa fa-thumbs-o-up fa-4x"></i>
    <h2><strong>Decidir</strong></h2>
    <p class="">Junte apoiantes e faça acontecer</p>
  </div>
</div>

<br><br>

<div class="row">
  <div class="col-md-12 text-center">
    <%= link_to 'Participe!', new_user_session_path, class: "btn btn-default btn-success btn-lg" %>
  </div>
</div>


<% end %>
