<% provide(:title, "Entrar") %>

<div class="row">
  <div class="col-md-12">
    <h1>Entrar</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: sessions_path) do |f| %>

          <%= f.label :email, "Email" %>
          <%= f.text_field :email %>

          <%= f.label :password, "Palavra-chave" %>
          <%= f.password_field :password %>

          <%= f.submit "Entrar", class: "btn btn-success" %>
        <% end %>
        <small>NÃ£o tem um perfil? <%= link_to "Crie-o aqui!", signup_path %></small>
      </div>
    </div>

  </div>
</div>
