<% provide(:title, "Entrar") %>

<div class="row">
  <div class="col-md-12">
    <h1>Entrar</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: sessions_path, html: {role: 'form'}) do |f| %>

          <div class="form-group">
            <%= f.label :email, "Email" %>
            <%= f.text_field :email, class: 'form-control', type: 'email' %>
          </div>

          <div class="form-group">
            <%= f.label :password, "Palavra-chave" %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <%= f.submit "Entrar", class: "btn btn-success" %>
        <% end %>
        <small>NÃ£o tem um perfil? <%= link_to "Crie-o aqui!", signup_path %></small>
      </div>
    </div>

  </div>
</div>
