<% provide(:title, "Editar definições") %>

<div class="row">
  <div class="col-md-12">

    <h1>Edite as suas definições</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.label :name, "Nome" %>
          <%= f.text_field :name %>

          <%= f.label :email, "Email" %>
          <%= f.text_field :email %>

          <%= f.label :password, "Palavra-chave" %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Repita a palavra-chave" %>
          <%= f.password_field :password_confirmation, placeholder: "Só para confirmar" %>

          <h3>Privacidade</h3>
          <br>

          <%= f.label :is_name_public, "Nome público" %>
          <%= f.check_box :is_name_public, :data => { :size=>'small', 'on-color'=>'success', 'on-text'=>'SIM', 'off-text'=>'NÃO' } %>
          <br><br>

          <%= f.label "Imagem pública" %>
          <%= gravatar_for @user %> <a href="http://gravatar.com/emails">alterar</a>
          <br><br>

          <%= f.label :political_party, "Partido político" %>&nbsp;<small>(será sempre mostrado ao lado do seu nome)</small>
          <%= f.text_field :political_party, placeholder: "SIGLA", :maxlength => 6, class: "input-small" %>
          <br>

          <%= f.submit "Guardar alterações", class: "btn btn-success" %>
          <%= link_to '<button class="btn btn-default">Cancelar</button>'.html_safe, current_user %>
        <% end %>
      </div>
    </div>

  </div>
</div>


<% content_for :head do %>
  <script type="text/javascript">
  $(document).ready(function() {
    $('input:checkbox').bootstrapSwitch();
  });
  </script>
<% end %>
