<% provide(:title, "Editar perfil") %>

<div class="row">
  <div class="span12">
    <h1>Edite o seu perfil</h1>

    <div class="row">
      <div class="span6 offset3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

          <%= f.label :name, "Nome" %>
          <%= f.text_field :name %>

          <%= f.label :email, "Email" %>
          <%= f.text_field :email %>

          <%= f.label :password, "Nova palavra-chave" %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Repita a nova palavra-chave" %>
          <%= f.password_field :password_confirmation, placeholder: "Só para confirmar" %>

          <%= f.label "Imagem" %>
          <%= gravatar_for @user %> <a href="http://gravatar.com/emails">alterar</a>
          <br><br>

          <%= f.submit "Guardar alterações", class: "btn" %>
        <% end %>


      </div>
    </div>

  </div>
</div>
