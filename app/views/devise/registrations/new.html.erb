<% provide(:title, 'Participar') %>

<div class="row">
  <div class="col-md-12">
    <h1>Participe</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'}) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="form-group">
            <%= f.label :name, "Nome" %>
            <%= f.text_field :name, class: 'form-control', placeholder: "Primeiro e último nome" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "Email" %>
            <%= f.text_field :email, class: 'form-control', type: :email %>
          </div>

          <div class="form-group">
            <%= f.label :password, "Palavra-chave" %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Repita a palavra-chave" %>
            <%= f.password_field :password_confirmation, placeholder: "Só para confirmar", class: 'form-control' %>
          </div>

          <br>
          <%= f.submit "Criar perfil", class: "btn btn-default btn-success" %>
        <% end %>

        <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
      </div>
    </div>
  </div>
</div>
