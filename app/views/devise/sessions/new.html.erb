<% provide(:title, t('login.form.title')) %>
<% t('login.form.title') %>

<div class="row">
  <div class="col-md-12">
    <h1><%= t('login.form.title') %></h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(resource,  as: resource_name, url: user_session_path, html: {role: 'form'}) do |f| %>

          <div class="form-group">
            <%= f.label :email, "Email" %>
            <%= f.text_field :email, class: 'form-control', type: 'email' %>
          </div>

          <div class="form-group">
            <%= f.label :password, t('login.form.password') %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <%= f.hidden_field :remember_me, value: true %>

          <%= f.submit t('login.form.submit'), class: "btn btn-success" %>
        <% end %>
        <small><%= link_to t('devise.links.signup'), new_registration_path(resource_name) %></small>
        <small class="pull-right"><%= link_to t('devise.links.forgot_pass'), new_password_path(resource_name) %></small>
      </div>
    </div>
      <div class="row social-box">
        <div class="col-md-6 col-md-offset-3">
          <a href="<%= user_omniauth_authorize_path(:facebook) %>" class="btn btn-block btn-social btn-facebook"><i class="fa fa-facebook"></i>Ligar-se com o Facebook</a>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
