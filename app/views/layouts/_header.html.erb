<header>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="http://www.portugalagora.com/" target="_blank" id="logo-pa"><%= image_tag("logo-portugal-agora.png", alt: "Portugal Agora", style:"height:40px") %></a>
        <%= link_to image_tag("logo-dcid.png", alt: "DCID", style:"width:45px"), root_path, id: "logo" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <!-- left buttons, EMPTY for now -->
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><a href="<%= proposals_path %>"><i class="fa fa-comment"></i> <%=t('header.proposals') %></a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-tags"></i> <%=t('header.dimensions')%><b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to t('header.portugal_atrativo'), tag_path('portugal-atrativo') %></li>
                <li><%= link_to t('header.portugal_do_conhecimento'), tag_path('portugal-do-conhecimento') %></li>
                <li><%= link_to t('header.portugal_empreendedor'), tag_path('portugal-empreendedor') %></li>
              </ul>
            <li><%= link_to "<i class=\"fa fa-group\"></i> #{t('header.citizens')}".html_safe, users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user fa-fw"></i> <%= current_user.welcome_name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to t('header.profile'),  current_user %></li>
                <li><%= link_to "<i class=\"fa fa-cog\"></i> #{t('header.settings')}".html_safe, edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "<i class=\"fa fa-sign-out\"></i> #{t('header.quit')}".html_safe, destroy_user_session_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('header.how_works'), how_path %></li>
            <li><%= link_to "<i class=\"fa fa-comment\"></i> #{t('header.proposals')}".html_safe, proposals_path %></li>
            <li><%= link_to "<i class=\"fa fa-sign-in fa-fw\"></i> #{t('login.form.title')}".html_safe, new_user_session_path %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
